{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Lambda Function resource stack creation using Amplify CLI",
  "Parameters": {
    "CloudWatchRule": {
      "Type": "String",
      "Default": "NONE",
      "Description": " Schedule Expression"
    },
    "deploymentBucketName": {
      "Type": "String"
    },
    "env": {
      "Type": "String"
    },
    "s3Key": {
      "Type": "String"
    }
  },
  "Conditions": {
    "ShouldNotCreateEnvResources": {
      "Fn::Equals": [
        {
          "Ref": "env"
        },
        "NONE"
      ]
    }
  },
  "Resources": {
    "LambdaFunction": {
      "Type": "AWS::Lambda::Function",
      "Metadata": {
        "aws:asset:path": "./src",
        "aws:asset:property": "Code"
      },
      "Properties": {
        "Code": {
          "S3Bucket": {
            "Ref": "deploymentBucketName"
          },
          "S3Key": {
            "Ref": "s3Key"
          }
        },
        "Handler": "index.handler",
        "FunctionName": {
          "Fn::If": [
            "ShouldNotCreateEnvResources",
            "nvsocialsettingslambda",
            {
              "Fn::Join": [
                "",
                [
                  "nvsocialsettingslambda",
                  "-",
                  {
                    "Ref": "env"
                  }
                ]
              ]
            }
          ]
        },
        "Environment": {
          "Variables": {
            "ENV": {
              "Ref": "env"
            },
            "REGION": {
              "Ref": "AWS::Region"
            },
            "FB_APP_CHALLENGE": "FB_TOKEN",
            "FB_APP_SECRET_ID": "FB_APP_SECRET",
            "FB_CONFIGURATION": "FB_SETTINGS",
            "FB_PAGES_ACCESS_TOKENS": "FB_PAGES_ACCESS_TOKENS",
            "FB_CRAWLER_EVENT_BRIDGE": "FB_CRAWLER_EVENT_BRIDGE_RULE_NAME",
            "ML_CONFIGURATION": "AI_CONFIG",
            "TW_SECRET_ID": "TW_BEARER_TOKEN",
            "TW_CONSUMER_KEY": "TW_CONSUMER_KEY",
            "TW_CONSUMER_SECRET": "TW_CONSUMER_SECRET",
            "TW_TOKEN": "TW_TOKEN",
            "TW_TOKEN_SECRET": "TW_TOKEN_SECRET",
            "TW_STREAM_RULES_API_URL": "https://api.twitter.com/2/tweets/search/stream/rules",
            "RESULT_BUCKET_NAME": "DATA_BUCKET_NAME",
            "MESSAGE_SNS_PARAMETER_STORE": "REPLY_MESSAGE_DEST_ARN",
            "IG_TO_FB_PAGE": "IG_TO_FB_PAGE",
            "IG_CRAWLER_EVENT_BRIDGE": "IG_CRAWLER_EVENT_BRIDGE_RULE_NAME",
            "YT_CLIENT_ID": "YT_CLIENT_ID",
            "YT_CLIENT_SECRET": "YT_CLIENT_SECRET",
            "YT_REDIRECT_URL": "YT_REDIRECT_URL",
            "YT_QUERY": "YT_QUERY"
          }
        },
        "Role": {
          "Fn::GetAtt": [
            "LambdaExecutionRole",
            "Arn"
          ]
        },
        "Runtime": "nodejs14.x",
        "Layers": [],
        "Timeout": 30
      }
    },
    "LambdaExecutionRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "RoleName": {
          "Fn::If": [
            "ShouldNotCreateEnvResources",
            "nvsociallisteninguiLambdaRoled5aaa397",
            {
              "Fn::Join": [
                "",
                [
                  "nvsociallisteninguiLambdaRoled5aaa397",
                  "-",
                  {
                    "Ref": "env"
                  }
                ]
              ]
            }
          ]
        },
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        }
      }
    },
    "lambdaexecutionpolicy": {
      "DependsOn": [
        "LambdaExecutionRole"
      ],
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": "lambda-execution-policy",
        "Roles": [
          {
            "Ref": "LambdaExecutionRole"
          }
        ],
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "logs:CreateLogGroup",
                "logs:CreateLogStream",
                "logs:PutLogEvents"
              ],
              "Resource": {
                "Fn::Sub": [
                  "arn:aws:logs:${region}:${account}:log-group:/aws/lambda/${lambda}:log-stream:*",
                  {
                    "region": {
                      "Ref": "AWS::Region"
                    },
                    "account": {
                      "Ref": "AWS::AccountId"
                    },
                    "lambda": {
                      "Ref": "LambdaFunction"
                    }
                  }
                ]
              }
            },
            {
              "Effect": "Allow",
              "Action": "lambda:InvokeFunction",
              "Resource": "*"
            },
            {
              "Effect": "Allow",
              "Action": [
                "s3:GetObject",
                "s3:ListBucket"
              ],
              "Resource": "arn:aws:s3:::*"
            },
            {
              "Effect": "Allow",
              "Action": [
                "secretsmanager:PutSecretValue",
                "secretsmanager:GetSecretValue"
              ],
              "Resource": [
                {
                  "Fn::Sub": [
                    "arn:aws:secretsmanager:${region}:${account}:secret:*TW_BEARER_TOKEN*",
                    {
                      "region": {
                        "Ref": "AWS::Region"
                      },
                      "account": {
                        "Ref": "AWS::AccountId"
                      }
                    }
                  ]
                },
                {
                  "Fn::Sub": [
                    "arn:aws:secretsmanager:${region}:${account}:secret:*YT_CLIENT_SECRET*",
                    {
                      "region": {
                        "Ref": "AWS::Region"
                      },
                      "account": {
                        "Ref": "AWS::AccountId"
                      }
                    }
                  ]
                },
                {
                  "Fn::Sub": [
                    "arn:aws:secretsmanager:${region}:${account}:secret:*TW_CONSUMER_KEY*",
                    {
                      "region": {
                        "Ref": "AWS::Region"
                      },
                      "account": {
                        "Ref": "AWS::AccountId"
                      }
                    }
                  ]
                },
                {
                  "Fn::Sub": [
                    "arn:aws:secretsmanager:${region}:${account}:secret:*TW_CONSUMER_SECRET*",
                    {
                      "region": {
                        "Ref": "AWS::Region"
                      },
                      "account": {
                        "Ref": "AWS::AccountId"
                      }
                    }
                  ]
                },
                {
                  "Fn::Sub": [
                    "arn:aws:secretsmanager:${region}:${account}:secret:*TW_TOKEN*",
                    {
                      "region": {
                        "Ref": "AWS::Region"
                      },
                      "account": {
                        "Ref": "AWS::AccountId"
                      }
                    }
                  ]
                },
                {
                  "Fn::Sub": [
                    "arn:aws:secretsmanager:${region}:${account}:secret:*TW_TOKEN_SECRET*",
                    {
                      "region": {
                        "Ref": "AWS::Region"
                      },
                      "account": {
                        "Ref": "AWS::AccountId"
                      }
                    }
                  ]
                },
                {
                  "Fn::Sub": [
                    "arn:aws:secretsmanager:${region}:${account}:secret:*FB_APP_SECRET*",
                    {
                      "region": {
                        "Ref": "AWS::Region"
                      },
                      "account": {
                        "Ref": "AWS::AccountId"
                      }
                    }
                  ]
                },
                {
                  "Fn::Sub": [
                    "arn:aws:secretsmanager:${region}:${account}:secret:*FB_TOKEN*",
                    {
                      "region": {
                        "Ref": "AWS::Region"
                      },
                      "account": {
                        "Ref": "AWS::AccountId"
                      }
                    }
                  ]
                },
                {
                  "Fn::Sub": [
                    "arn:aws:secretsmanager:${region}:${account}:secret:*FB_PAGES_ACCESS_TOKENS*",
                    {
                      "region": {
                        "Ref": "AWS::Region"
                      },
                      "account": {
                        "Ref": "AWS::AccountId"
                      }
                    }
                  ]
                }
              ]
            },
            {
              "Effect": "Allow",
              "Action": "secretsmanager:GetSecretValue",
              "Resource": [
                {
                  "Fn::Sub": [
                    "arn:aws:secretsmanager:${region}:${account}:secret:*FB_APP_SECRET*",
                    {
                      "region": {
                        "Ref": "AWS::Region"
                      },
                      "account": {
                        "Ref": "AWS::AccountId"
                      }
                    }
                  ]
                }
              ]
            },
            {
              "Effect": "Allow",
              "Action": [
                "ssm:GetParameter",
              ],
              "Resource": [
                 {
                  "Fn::Sub": [
                    "arn:aws:ssm:${region}:${account}:parameter/YT_REDIRECT_URL",
                    {
                      "region": {
                        "Ref": "AWS::Region"
                      },
                      "account": {
                        "Ref": "AWS::AccountId"
                      }
                    }
                  ]
                }
              ]
            },
            {
              "Effect": "Allow",
              "Action": [
                "ssm:GetParameter",
                "ssm:PutParameter"
              ],
              "Resource": [
                {
                  "Fn::Sub": [
                    "arn:aws:ssm:${region}:${account}:parameter/YT_QUERY",
                    {
                      "region": {
                        "Ref": "AWS::Region"
                      },
                      "account": {
                        "Ref": "AWS::AccountId"
                      }
                    }
                  ]
                },
                {
                  "Fn::Sub": [
                    "arn:aws:ssm:${region}:${account}:parameter/REPLY_MESSAGE_DEST_ARN",
                    {
                      "region": {
                        "Ref": "AWS::Region"
                      },
                      "account": {
                        "Ref": "AWS::AccountId"
                      }
                    }
                  ]
                },
                {
                  "Fn::Sub": [
                    "arn:aws:ssm:${region}:${account}:parameter/FB_CRAWLER_EVENT_BRIDGE_RULE_NAME",
                    {
                      "region": {
                        "Ref": "AWS::Region"
                      },
                      "account": {
                        "Ref": "AWS::AccountId"
                      }
                    }
                  ]
                },
                {
                  "Fn::Sub": [
                    "arn:aws:ssm:${region}:${account}:parameter/IG_CRAWLER_EVENT_BRIDGE_RULE_NAME",
                    {
                      "region": {
                        "Ref": "AWS::Region"
                      },
                      "account": {
                        "Ref": "AWS::AccountId"
                      }
                    }
                  ]
                },
                {
                  "Fn::Sub": [
                    "arn:aws:ssm:${region}:${account}:parameter/TW_LAMBDA_ARN",
                    {
                      "region": {
                        "Ref": "AWS::Region"
                      },
                      "account": {
                        "Ref": "AWS::AccountId"
                      }
                    }
                  ]
                },
                {
                  "Fn::Sub": [
                    "arn:aws:ssm:${region}:${account}:parameter/FB_SETTINGS",
                    {
                      "region": {
                        "Ref": "AWS::Region"
                      },
                      "account": {
                        "Ref": "AWS::AccountId"
                      }
                    }
                  ]
                },
                {
                  "Fn::Sub": [
                    "arn:aws:ssm:${region}:${account}:parameter/AI_CONFIG",
                    {
                      "region": {
                        "Ref": "AWS::Region"
                      },
                      "account": {
                        "Ref": "AWS::AccountId"
                      }
                    }
                  ]
                },
                {
                  "Fn::Sub": [
                    "arn:aws:ssm:${region}:${account}:parameter/DATA_BUCKET_NAME",
                    {
                      "region": {
                        "Ref": "AWS::Region"
                      },
                      "account": {
                        "Ref": "AWS::AccountId"
                      }
                    }
                  ]
                },
                {
                  "Fn::Sub": [
                    "arn:aws:ssm:${region}:${account}:parameter/IG_TO_FB_PAGE",
                    {
                      "region": {
                        "Ref": "AWS::Region"
                      },
                      "account": {
                        "Ref": "AWS::AccountId"
                      }
                    }
                  ]
                },
                {
                  "Fn::Sub": [
                    "arn:aws:ssm:${region}:${account}:parameter/YT_CLIENT_ID",
                    {
                      "region": {
                        "Ref": "AWS::Region"
                      },
                      "account": {
                        "Ref": "AWS::AccountId"
                      }
                    }
                  ]
                }
              ]
            },
            {
              "Effect": "Allow",
              "Action": [
                "lambda:InvokeFunction"
              ],
              "Resource": {
                "Fn::Sub": [
                  "arn:aws:lambda:${region}:${account}:function:*TwitterChangeToken*",
                  {
                    "region": {
                      "Ref": "AWS::Region"
                    },
                    "account": {
                      "Ref": "AWS::AccountId"
                    }
                  }
                ]
              }
            },
            {
              "Effect": "Allow",
              "Action": [
                "sns:Publish"
              ],
              "Resource": {
                "Fn::Sub": [
                  "arn:aws:sns:${region}:${account}:*ReplyMessageTopic*",
                  {
                    "region": {
                      "Ref": "AWS::Region"
                    },
                    "account": {
                      "Ref": "AWS::AccountId"
                    }
                  }
                ]
              }
            },
            {
              "Effect": "Allow",
              "Action": [
                "events:EnableRule",
                "events:DisableRule"
              ],
              "Resource": {
                "Fn::Sub": [
                  "arn:aws:events:${region}:${account}:rule/FacebookCrawlingScheduler",
                  {
                    "region": {
                      "Ref": "AWS::Region"
                    },
                    "account": {
                      "Ref": "AWS::AccountId"
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    }
  },
  "Outputs": {
    "Name": {
      "Value": {
        "Ref": "LambdaFunction"
      }
    },
    "Arn": {
      "Value": {
        "Fn::GetAtt": [
          "LambdaFunction",
          "Arn"
        ]
      }
    },
    "Region": {
      "Value": {
        "Ref": "AWS::Region"
      }
    },
    "LambdaExecutionRole": {
      "Value": {
        "Ref": "LambdaExecutionRole"
      }
    }
  }
}